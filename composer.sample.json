{
  "name": "magento-set/support-patches",
  "description": "Magento 2 patches",
  "type":"composer-plugin",
  "version": "2.2.1.4",
  "license": [
    "OSL-3.0",
    "AFL-3.0"
  ],
  "repositories": [
    {
      "type": "composer",
      "url": "https://repo.magento.com/"
    }
  ],
  "minimum-stability": "dev",
  "prefer-stable": true,
  "require": {
    "php": "^7.0",
    "psr/log": "^1.0",
    "psr/container": "^1.0",
    "symfony/console": "^2.6",
    "illuminate/container": "^5.5",
    "illuminate/support": "5.5.*",
    "composer/composer": "^1.0",
    "composer/semver": "^1.4",
    "monolog/monolog": "^1.17",
    "composer-plugin-api": "^1.0"
  },
  "autoload": {
    "psr-4": {
      "Magento\\SetPatches\\": "src"
    }
  },
  "extra": {
    "class": "\\Magento\\SetPatches\\Plugin",
    "enable-patching": true,
    "patches":{
      "1": {
        "path": "patches/patch1/test1.patch"
      },
      "3": {
        "path": "patches/patch3/test3.patch",
        "require": {
          "react/promise": "~2.0"
        },
        "requirePatch": [
          2
        ]
      },
      "2": {
        "path": "patches/patch2/test2.patch",
        "requirePatch": [
          1
        ]
      }
    }
  }
}
